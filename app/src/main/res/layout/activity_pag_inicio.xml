<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Sair"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paigina1"
    tools:context=".PagInicio.PagInicio">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="201dp"
        android:layout_height="507dp"
        android:layout_marginBottom="52dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/NovaHunt"
            android:layout_width="197dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:text="Nova Hunt"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ContinuarHunt"
            android:layout_width="197dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:text="Continuar"
            android:textSize="20sp" />

        <Button
            android:id="@+id/HuntConcluida"
            android:layout_width="197dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:text="Hunts Concluidas"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Pokedex"
            android:layout_width="196dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:text="Pokedex"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Recordes"
            android:layout_width="196dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:text="Recordes"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/Deslogar"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Deslogar"
        android:scaleType="fitCenter"
        android:tint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

</androidx.constraintlayout.widget.ConstraintLayout>